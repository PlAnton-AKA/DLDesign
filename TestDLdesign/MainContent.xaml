<Page x:Class="TestDLdesign.MainContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"         
	  Title="MainContent">
    <Grid>
        <DockPanel VerticalAlignment="Top">
            <TabControl DockPanel.Dock="Top" TabStripPlacement="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="600" BorderThickness="1,0,1,1" >
                <TabItem Style="{StaticResource firstTab}" HeaderTemplate="{StaticResource tabItemGeneralHeaderTemplate}" Name="tabItemGeneral">                    
                    <RadioButton HorizontalAlignment="Left" Content="RadioButton" Height="100" Width="100" Margin="16,20,132,471"/>                    
                </TabItem>
                <TabItem Style="{StaticResource firstTab}" HeaderTemplate="{StaticResource tabItemSiteHeaderTemplate}" Name="tabSitelImg"></TabItem>
                <TabItem Style="{StaticResource firstTab}" HeaderTemplate="{StaticResource tabItemErpHeaderTemplate}" Name="tabErpImg"></TabItem>
                <TabItem Style="{StaticResource firstTab}" HeaderTemplate="{StaticResource tabItemOperationsHeaderTemplate}" Name="tabOperationsImg"></TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Page>
